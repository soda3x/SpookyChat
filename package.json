{
  "name": "spookychat-lazy-client",
  "version": "1.0.0",
  "description": "Electron client for Rocketchat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build_win32": "electron-packager . \"spookychat-lazy-client\" --platform=win32 --icon=\"appIcon.ico\" --asar --out=\"build/\"",
    "build_linux": "electron-packager . \"spookychat-lazy-client\" --platform=\"linux\" --icon=\"appIcon.png\" --asar --out=\"build/\"",
    "build_macos": "electron-packager . \"spookychat-lazy-client\" -- platform=\"darwin\" --icon=\"appIcon.png\" -- asar--out=\"build/\"",
    "clean": "rm -rf \"build\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "bnewman",
  "license": "ISC",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-packager": "^15.0.0"
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.2-hotfix62"
  }
}
